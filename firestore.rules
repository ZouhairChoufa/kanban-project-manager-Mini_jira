rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection rules
    match /artifacts/{appId}/public/data/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Projects collection rules
    match /artifacts/{appId}/public/data/projects/{projectId} {
      allow read, create: if request.auth != null;
      
      // Allow update if user is a member of the project
      allow update: if request.auth != null 
                    && request.auth.uid in resource.data.members;
      
      // Allow delete ONLY if user is the creator
      allow delete: if request.auth != null 
                    && request.auth.uid == resource.data.createdById;
      
      // Tasks subcollection rules (nested under projects)
      match /tasks/{taskId} {
        allow read, write: if request.auth != null;
      }
    }

    // Tasks collection rules (if stored at root level)
    match /artifacts/{appId}/public/data/tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
  }
}
